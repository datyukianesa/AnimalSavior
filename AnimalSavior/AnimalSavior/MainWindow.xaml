                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Image Margin="279,5,16,148" Source="User_icon_BLACK-01.png" Stretch="Fill" Grid.Column="1"/>
            <Label Content="Hai Budy..!!" HorizontalAlignment="Left" Margin="190,12,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="White" Height="30" Grid.Column="1"/>
            <Label Content="Animal Savior" HorizontalAlignment="Left" Margin="49,1,0,0" VerticalAlignment="Top" FontSize="28" FontWeight="Bold" Foreground="White" Height="42"/>
            <Button
