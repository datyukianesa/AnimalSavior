                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Offset="1" Color="White" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Image
            Margin="300,148,37,255"
            Source="doctor (1).png"
            Stretch="Fill" Grid.RowSpan="2" />
            <Label
            Grid.Row="1"
            Width="101"
            Height="24"
            Margin="276,53,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Prof. Dr. Ericaa "
            FontWeight="Bold" />
            <Button
            Margin="3,124,230,231"
            Content=""
            Style="{StaticResource InformButton}" Grid.RowSpan="2" Grid.Column="1">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Offset="1" Color="White" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Label
            Grid.Row="1"
            Width="107"
            Height="24"
            Margin="3,55,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Dr. Bambang S"
            FontWeight="Bold" Grid.Column="1" />
            <Image
            Margin="29,145,255,258"
            Source="doctor.png"
            Stretch="Fill" Grid.RowSpan="2" Grid.Column="1" RenderTransformOrigin="0.5,0.5" >
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="-0.839"/>
                        <RotateTransform/>
                        <TranslateTransform Y="-0.487"/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Label
                x:Name="lbl_kuesioner_Copy"
                Width="233"
                Height="30"
                Margin="16,83,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Tips and Trick"
                FontFamily="Arial rounded"
                FontSize="20"
                FontWeight="Bold" Grid.Row="1" />
            <Button
                Margin="26,118,261,46"
                Content=""
                Style="{StaticResource InformButton}" Grid.Row="1">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Offset="1" Color="White" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Image
                Margin="51,142,287,70"
                Source="doctor.png"
                Stretch="Fill" Grid.Row="1" />
            <Label
                Grid.Row="1"
                Width="116"
                Height="27"
                Margin="20,238,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Dr. Deddy Cahyadi"
                FontWeight="Bold" />

        </Grid>
    </Border>
</Page>
