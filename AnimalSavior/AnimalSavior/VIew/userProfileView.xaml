<Page x:Class="AnimalSavior.View.userProfileView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AnimalSavior.VIew"
      mc:Ignorable="d" 
      d:DesignHeight="468" d:DesignWidth="735.5"
      Title="userProfileView">

    <Grid Background="White">
        <!--Round button-->
        <Button Margin="274,330,386,40">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Ellipse Stroke="Black" StrokeThickness="0">
                            <Ellipse.Fill>
                                <RadialGradientBrush>
                                    <GradientStop Offset="1" Color="#FF0097E6" />
                                    <RadialGradientBrush.Transform>
                                        <TransformGroup>
                                            <ScaleTransform ScaleY="0.65" />
                                        </TransformGroup>
                                    </RadialGradientBrush.Transform>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Ellipse
            Width="133"
            Height="137"
            Margin="112,103,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Fill="White" />
        <Image
            Margin="122,111,494,216">
            <Image.Source>
                <BitmapImage DecodePixelWidth="300" UriSource="/images/user.png" />
            </Image.Source>
        </Image>
        <Image Margin="286,346,395,54" RenderTransformOrigin="0.705,0.9">
            <Image.Source>
                <BitmapImage DecodePixelWidth="300" UriSource="/images/pencil.png"/>
            </Image.Source>
        </Image>
        <Label
            x:Name="lbl_userProfile"
            Width="150"
            Height="34"
            Margin="18,14,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="User Profile"
            FontFamily="Arial rounded"
            FontSize="24"
            FontWeight="Bold" />
        <Button
            x:Name="button"
            Width="256"
            Height="42"
            Margin="424,364,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FF0097E6"
            BorderBrush="White"
            Content="Submit"
            Foreground="White" Click="button_Click" />
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="356" Stroke="Black" VerticalAlignment="Top" Width="4" Margin="381,48,0,0"/>
        <Label
            x:Name="lbl_keanu"
            Width="253"
            Height="50"
            Margin="59,256,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Keanu Reeves"
            FontFamily="Hobo Std"
            FontSize="36"
            FontWeight="Bold" />
        <Label
            x:Name="lbl_alamatEmail"
            Margin="432,52,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Email Address"
            FontSize="16" FontWeight="Bold" Height="33" Width="118" />
        <TextBox
            x:Name="textBox_Copy1"
            Width="238"
            Height="25"
            Margin="432,83,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            IsReadOnly="True"
            Text="author@ygmail.com"
            TextWrapping="Wrap" />
        <Label
            x:Name="lbl_jenisHewan"
            Margin="430,127,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Kind of Pet"
            FontSize="16" FontWeight="Bold" Height="34" Width="106" />
        <TextBox
            x:Name="textBox_Copy2"
            Width="238"
            Height="24"
            Margin="432,160,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Kelinci"
            TextWrapping="Wrap" />
        <Label
            x:Name="lbl_alamat"
            Margin="430,195,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Address"
            FontSize="16" FontWeight="Bold" Height="34" Width="81" />
        <Rectangle
            Width="238"
            Height="86"
            Margin="432,229,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Fill="#FFE0E0E0" />
        <TextBlock
            x:Name="textBlock_Copy"
            Width="239"
            Height="69"
            Margin="424,238,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextAlignment="Center"
            TextWrapping="Wrap"><Run Text="Jl. Lorem ipsum Dolor Sit Amet " /><LineBreak /><Run Text="Rt 4 Rw3, Free Day Fun, " /><LineBreak /><Run Text="Yogyakarta." /></TextBlock>

        <!--Round button-->
    </Grid>
</Page>
