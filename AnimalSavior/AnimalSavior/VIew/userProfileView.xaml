<Page
    x:Class="AnimalSavior.View.userProfileView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AnimalSavior.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="userProfileView"
    d:DesignHeight="468"
    d:DesignWidth="735.5"
    mc:Ignorable="d">

    <Grid Background="White">
        <!--  Round button  -->
        <Button Margin="276,362,403,48">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Ellipse Stroke="Black" StrokeThickness="0">
                            <Ellipse.Fill>
                                <RadialGradientBrush>
                                    <GradientStop Offset="1" Color="#FF0097E6" />
                                    <RadialGradientBrush.Transform>
                                        <TransformGroup>
                                            <ScaleTransform ScaleY="0.65" />
                                        </TransformGroup>
                                    </RadialGradientBrush.Transform>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Ellipse
            Width="135"
            Height="137"
            Margin="113,103,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Fill="White" />
        <Image Margin="123,111,491,216">
            <Image.Source>
                <BitmapImage DecodePixelWidth="300" UriSource="/images/user.png" />
            </Image.Source>
        </Image>
        <Image Margin="286,372,410,56" RenderTransformOrigin="0.705,0.9">
            <Image.Source>
                <BitmapImage DecodePixelWidth="300" UriSource="/images/pencil.png" />
            </Image.Source>
        </Image>
        <Label
            x:Name="lbl_userProfile"
            Width="152"
            Height="34"
            Margin="18,14,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="User Profile"
            FontFamily="Arial rounded"
            FontSize="24"
            FontWeight="Bold" />
        <Button
            x:Name="button"
            Width="259"
            Height="42"
            Margin="418,364,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FF0097E6"
            BorderBrush="White"
            Click="button_Click"
            Content="Submit"
            Foreground="White" />
        <Rectangle
            Width="4"
            Height="356"
            Margin="374,48,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Fill="Black"
            Stroke="Black" />
        <Label
            x:Name="lbl_keanu"
            Width="256"
            Height="50"
            Margin="60,256,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Keanu Reeves"
            FontFamily="Hobo Std"
            FontSize="36"
            FontWeight="Bold" />
        <Label
            x:Name="lbl_alamatEmail"
            Width="119"
            Height="33"
            Margin="426,52,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Email Address"
            FontSize="16"
            FontWeight="Bold" />
        <TextBox
            x:Name="textBox_Copy1"
            Width="241"
            Height="25"
            Margin="426,83,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            IsReadOnly="True"
            Text="author@ygmail.com"
            TextWrapping="Wrap" />
        <Label
            x:Name="lbl_jenisHewan"
            Width="107"
            Height="34"
            Margin="424,127,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Kind of Pet"
            FontSize="16"
            FontWeight="Bold" />
        <TextBox
            x:Name="textBox_Copy2"
            Width="241"
            Height="24"
            Margin="426,160,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Kelinci"
            TextWrapping="Wrap" />
        <Label
            x:Name="lbl_alamat"
            Width="82"
            Height="34"
            Margin="424,195,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Address"
            FontSize="16"
            FontWeight="Bold" />
        <Rectangle
            Width="241"
            Height="86"
            Margin="426,229,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Fill="#FFE0E0E0" />
        <TextBlock
            x:Name="textBlock_Copy"
            Width="242"
            Height="69"
            Margin="418,238,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextAlignment="Center"
            TextWrapping="Wrap"><Run Text="Jl. Lorem ipsum Dolor Sit Amet " /><LineBreak /><Run Text="Rt 4 Rw3, Free Day Fun, " /><LineBreak /><Run Text="Yogyakarta." /></TextBlock>

        <!--  Round button  -->
    </Grid>
</Page>
