<Page x:Class="AnimalSavior.View.kuisionerView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AnimalSavior.VIew"
      mc:Ignorable="d" 
      d:DesignHeight="468" d:DesignWidth="735.5"
      Title="kuisionerView">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="173*"/>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="212*"/>
        </Grid.RowDefinitions>
        <Label
            x:Name="lbl_kuesioner"
            Width="120"
            Height="40"
            Margin="34,4,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Kuesioner"
            FontFamily="Arial rounded"
            FontSize="22"
            FontWeight="Bold" />
        <Label
            x:Name="label_Copy"
            Width="352"
            Height="22"
            Margin="34,36,0,0"
            Padding="5,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            Content="Silahkan isikan agar dokter dapat mengerti apa yang terjadi" FontWeight="Bold" />
        <Label
            Width="191"
            Height="32"
            Margin="393,97,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Jenis Hewan Peliharaan"
            FontSize="16" FontWeight="Bold" />
        <ComboBox
            x:Name="comboBox"
            Width="266"
            Height="22"
            Margin="393,129,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            BorderBrush="#FF125873"
            SelectionChanged="comboBox_SelectionChanged">
            <ComboBox.Background>
                <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="0" Color="#FF20D0CE" />
                    <GradientStop Offset="1" Color="#FF125873" />
                </LinearGradientBrush>
            </ComboBox.Background>
            <ComboBoxItem />
            <ComboBoxItem />
            <ComboBoxItem />
            <ComboBoxItem />
        </ComboBox>
        <Label
            x:Name="label_Copy2"
            Width="161"
            Height="33"
            Margin="388,13,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Gejala yang Dialami" FontWeight="Bold" Grid.Row="2" FontSize="16" />
        <TextBlock
            x:Name="textBlock"
            Width="266"
            Height="88"
            Margin="393,51,0,0"
            Padding="5,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="White"
            FontSize="10"
            Foreground="#FF125873"
            TextWrapping="Wrap" Grid.Row="2"><Run Text="- " /><Run Text="Lorem Ipsum dolor sit amet" /><LineBreak /><Run Text="- Lorem Ipsum dolor sit" /><Run Text=" " /><Run Text="amet" /><LineBreak /><Run Text="- " /><Run Text="Lorem Ipsum dolor sit amet" /></TextBlock>
        <Label
            x:Name="label_Copy3"
            Width="161"
            Height="30"
            Margin="389,161,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Umur"
            FontSize="16" FontWeight="Bold" Grid.RowSpan="2" />
        <TextBox
            x:Name="textBox"
            Width="266"
            Height="32"
            Margin="393,10,0,0"
            Padding="2,0,5,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            Text="23 Tahun"
            TextWrapping="Wrap" Grid.Row="1" Grid.RowSpan="2" />
        <Button
            x:Name="kuesioner_button"
            Width="248"
            Height="38"
            Margin="406,154,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FF0097E6"
            BorderBrush="White"
            Content="Submit"
            Foreground="White" Grid.Row="2" />
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="328" Stroke="Black" VerticalAlignment="Top" Width="4" Margin="364,79,0,0" Grid.RowSpan="3"/>
        <Label
            x:Name="lbl_animalSavior_2"
            Width="167"
            Height="40"
            Margin="85,30,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Animal Savior"
            FontFamily="Arial rounded"
            FontSize="24"
            FontWeight="Bold" Grid.Row="2" />
        <Image Margin="88,89,482,175" Source="/AnimalSavior;component/pnda peenge.png" Stretch="Fill" RenderTransformOrigin="0.678,-0.485" Grid.RowSpan="3"/>
    </Grid>
</Page>
